<resources>
    <style name="MockPlayerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MockPlayerView.Banner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">60dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_marginBottom">20dip</item>
        <item name="android:padding">5dip</item>
        <item name="android:background">@color/blue</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MockPlayerView.TextItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">40dip</item>
        <item name="android:layout_marginBottom">10dip</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>