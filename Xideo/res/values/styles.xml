<?xml version="1.0" encoding="utf-8"?>
<resources
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:binding="http://www.gueei.com/android-binding/">

	<style name="goldengate_spinner">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:dropDownSelector">@android:color/transparent</item>
		<item name="android:popupBackground">@drawable/play_menu_background</item>
		<item name="android:dropDownVerticalOffset">0dip</item>
		<item name="android:dropDownHorizontalOffset">0dip</item>
		<item name="android:dropDownWidth">wrap_content</item>
<!--         <item name="android:popupPromptView">@android:layout/simple_dropdown_hint</item> -->
		<item name="android:gravity">left|center_vertical</item>
<!--         <item name="android:disableChildrenWhenDisabled">true</item> -->
	</style>

	<style name="black_button_style">
		<item name="android:background">@drawable/black_button</item>
		<item name="android:textColor">#c0c0c0</item>
	</style>

	<style name="see_more_button_style">
		<item name="android:background">@drawable/see_more_button</item>
		<item name="android:textColor">#c0c0c0</item>
	</style>

	<style name="likes_style">
		<item name="android:background">@drawable/likes_background</item>
		<item name="android:drawableRight">@drawable/xf_store_icon_like_small</item>
		<item name="android:drawablePadding">5dp</item>
		<item name="android:minWidth">40dp</item>
		<item name="android:paddingTop">2dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:gravity">right</item>
	</style>

	<style name="mainmenuitem">
		<item name="android:background">@drawable/mainmenu_menuitem_background</item>
		<item name="android:textColor">#808080</item>
	</style>

	<style name="arrow_button">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:drawableRight">@drawable/right_arrow_focusable</item>
		<item name="android:paddingRight">5dp</item>
		<item name="android:textColor">@drawable/focusable_text</item>
	</style>

	<style name="progess">
		<item name="android:progressDrawable">@drawable/progress_horizontal_holo_dark</item>
		<item name="android:minHeight">8dip</item>
		<item name="android:maxHeight">8dip</item>
		<item name="android:indeterminateOnly">false</item>
	</style>

	<style
		name="channel_button"
		parent="android:Widget.ImageButton">
		<item name="android:scaleType">centerInside</item>
		<item name="android:minWidth">128dp</item>
		<item name="android:minHeight">72dp</item>
		<item name="android:background">@drawable/channelbutton_background</item>
	</style>

	<style name="blackbuttonstyle1">
		<item name="android:background">@drawable/blackbutton_background</item>
		<item name="android:textColor">@drawable/focusable_text</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingRight">15dp</item>
	</style>

	<style name="fadedBackground">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">#88000000</item>
	</style>

	<style
		name="FullHeightDialog"
		parent="android:style/Theme.Holo.Dialog">
		<item name="android:editTextBackground">@drawable/edit_text_golden</item>
		<item name="android:windowNoTitle">true</item>
	</style>

	<style name="header1">
		<item name="android:textSize">30sp</item>
		<item name="android:textStyle">bold</item>
	</style>

	<style name="header2">
		<item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
		<item name="android:textSize">25sp</item>
	</style>

	<style name="title_container">
		<item name="android:background">@drawable/blackbutton_background</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:paddingLeft">20dp</item>
		<item name="android:paddingTop">10dp</item>
	</style>

	<style name="sorting_bar">
		<item name="android:layout_marginBottom">20dp</item>
		<item name="android:layout_marginTop">10dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">40dp</item>
	</style>

	<style name="player_icon">
		<item name="android:layout_width">45dp</item>
		<item name="android:layout_height">fill_parent</item>
		<item name="android:background">@android:color/transparent</item>
	</style>

	<style
		name="goldenGateTheme"
		parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
		<item name="android:editTextBackground">@drawable/edit_text_golden</item>
		<item name="android:windowBackground">@android:color/black</item>
	</style>
	
	<style
		name="noTheme"
		parent="@android:style/Theme.Translucent.NoTitleBar.Fullscreen">
	    <item name="android:windowIsTranslucent">false</item>
	    <item name="android:windowBackground">@null</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">false</item>
	    <item name="android:backgroundDimEnabled">false</item>
	    <item name="android:padding">0dp</item>
		</style>
	
	<style name="xidioTransparentWindow" parent="android:Theme">
	    <item name="android:windowIsTranslucent">false</item>
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:windowContentOverlay">@null</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowIsFloating">false</item>
	    <item name="android:backgroundDimEnabled">false</item>
	    <item name="android:padding">2dp</item>
	  </style>
</resources>