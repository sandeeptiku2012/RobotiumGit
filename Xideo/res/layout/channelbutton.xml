<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:binding="http://www.gueei.com/android-binding/"
	android:id="@+id/id3"
	android:layout_width="@dimen/channel_button_width"
	android:layout_height="@dimen/channel_button_height"
	android:layout_marginLeft="5px"
	android:layout_marginRight="5px"
	android:background="@drawable/blackbutton_background"
	android:descendantFocusability="blocksDescendants"
	android:focusable="true"
	binding:onClick="openChannel"
	binding:onGainFocus="ARG(onGainFocus,.)">
	<ImageView
		android:layout_width="@dimen/channel_button_width"
		android:layout_height="@dimen/channel_button_height"
		android:duplicateParentState="true"
		android:scaleType="fitXY"
		binding:source="logo"
		android:src="@drawable/sample_logo" />
	<TextView
		android:id="@+id/textView1"
		style="@style/likes_style"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom|left"
		android:layout_marginBottom="-2dp"
		android:layout_marginLeft="-2dp"
		android:text="102"
		binding:text="likes"
		binding:visibility="IS_NOT_NULL(likes)" />
	<FrameLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_gravity="center"
		binding:visibility="ISNULL(logo)">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:text="Loading..." />
	</FrameLayout>
	<LinearLayout
		android:layout_width="@dimen/channel_button_width"
		android:layout_height="@dimen/channel_button_height"
		android:layout_gravity="center"
		android:background="@drawable/focused_faded_background"
		android:duplicateParentState="true"
		android:orientation="vertical">
		<TextView
			android:id="@+id/date"
			android:layout_width="@dimen/channel_button_width"
			android:layout_height="wrap_content"
			android:duplicateParentState="true"
			android:ellipsize="marquee"
			android:focusable="true"
			android:gravity="right"
			android:marqueeRepeatLimit="marquee_forever"
			android:maxLines="1"
			android:paddingLeft="2dp"
			android:paddingRight="5dp"
			android:scrollHorizontally="true"
			android:text="12/03/12"
			android:textColor="@drawable/video_item_focusable_text"
			android:textSize="15px"
			android:visibility="visible"
			binding:text="publisher" />
		<TextView
			android:id="@+id/title"
			android:layout_width="@dimen/channel_button_width"
			android:layout_height="62px"
			android:duplicateParentState="true"
			android:ellipsize="marquee"
			android:fadingEdge="horizontal"
			android:gravity="right|center"
			android:marqueeRepeatLimit="marquee_forever"
			android:maxWidth="@dimen/channel_button_width"
			android:paddingLeft="2dp"
			android:paddingRight="5dp"
			android:singleLine="true"
			android:text="A title"
			android:textColor="@drawable/video_item_focusable_text"
			android:textSize="25px"
			android:visibility="visible"
			binding:text="title"
			binding:visibility="IS_NOT_NULL(title)" />
		<TextView
			android:id="@+id/numberofvideos"
			android:layout_width="@dimen/channel_button_width"
			android:layout_height="wrap_content"
			android:duplicateParentState="true"
			android:ellipsize="marquee"
			android:fadingEdge="horizontal"
			android:focusable="true"
			android:gravity="right|bottom"
			android:lines="1"
			android:marqueeRepeatLimit="marquee_forever"
			android:paddingLeft="2dp"
			android:paddingRight="5dp"
			android:scrollHorizontally="true"
			android:text=""
			android:textColor="@drawable/video_item_focusable_text"
			android:textSize="15px"
			android:visibility="visible"
			binding:text="CONCAT(numberOfVideos, @string/_videos)" />
	</LinearLayout>
</FrameLayout>