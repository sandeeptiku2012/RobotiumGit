<?xml version="1.0" encoding="utf-8"?>
<merge
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:binding="http://www.gueei.com/android-binding/"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:gravity="top">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical">
		<LinearLayout
			android:id="@+id/button_layout1"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:layout_marginRight="5dp"
			android:gravity="top|center_horizontal"
			android:orientation="vertical">
			<ImageButton
				android:id="@+id/image_back"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:scaleType="fitCenter"
				android:padding="0dp"
				android:layout_margin="5dp"
				android:background="@android:color/transparent"
				android:nextFocusLeft="@+id/image_back"
				android:nextFocusRight="@+id/image_thumb_container"
				android:src="@drawable/ic_details_back_k" />
			<TextView
				android:id="@+id/button_layout1_text1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="BACK"
				android:textColor="#c0ffffff"
				android:textSize="14sp"
				binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Basic.otf')" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/details_container"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:layout_marginRight="15dp"
			android:layout_gravity="left|top"
			android:orientation="horizontal">
			<LinearLayout
				android:id="@+id/image_thumb_container"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:focusable="true"
				android:nextFocusLeft="@+id/image_back"
				android:nextFocusRight="@+id/image_extra1"
				android:orientation="vertical"
			    >
			<ImageView
				android:id="@+id/image_thumb"
				android:layout_width="@dimen/details_header_image_thumb_width"
				android:layout_height="@dimen/details_header_image_thumb_height"
				android:scaleType="fitXY"
				android:layout_gravity="top|center_horizontal"
				android:background="@android:color/black"
				android:padding="0dp"
				android:src="@drawable/default_background_image"
				binding:source="imageThumb"
				 />
			<ImageView
				android:id="@+id/image_down"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="10dp"
				android:layout_marginBottom="10dp"
				android:scaleType="fitXY"
				android:layout_gravity="bottom|center_horizontal"
				android:src="@drawable/ic_details_down"
				 />
				<requestFocus/>
			</LinearLayout>
			<LinearLayout
				android:id="@+id/label_container"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15dp"
				android:layout_marginRight="5dp"
				android:focusable="false"
				android:orientation="vertical">
				<TextView
					android:id="@+id/text1"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="top"
					android:gravity="top|start"
					android:textSize="16sp"
					android:focusable="false"
					android:singleLine="true"
					android:maxLines="1"
					android:ellipsize="none"
					android:scrollHorizontally="true"
					android:textColor="#c0ffffff"
					binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Basic.otf')"
					android:text=""
					binding:text="headerText1"
					 />
				<TextView
					android:id="@+id/text2"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="2"
					android:gravity="center_vertical"
					android:textSize="46sp"
					android:focusable="false"
					android:textColor="#ffffff"
					android:singleLine="true"
					android:maxLines="1"
					android:ellipsize="none"
					android:scrollHorizontally="true"
					binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Thin.otf')"
					binding:text="headerText2"
					android:text="" />
				<TextView
					android:id="@+id/text3"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_gravity="bottom"
					android:gravity="bottom"
					android:textSize="14sp"
					android:focusable="false"
					android:textColor="#ffffffff"
					android:maxLines="4"
					binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Basic.otf')"
					binding:text="headerText3"
					android:text="" />
			</LinearLayout>
		</LinearLayout>
		<LinearLayout
			android:id="@+id/button_layout2"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:gravity="top|center_horizontal"
			android:layout_marginTop="10dp"
			android:layout_gravity="center"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="10dp"
			android:orientation="vertical">
			<ImageButton
				android:id="@+id/image_extra1"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:scaleType="fitCenter"
				android:padding="0dp"
				android:layout_margin="5dp"
				android:background="@android:color/transparent"
				android:src="@drawable/ic_details_preview" />
			<TextView
				android:id="@+id/button_layout2_text1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="PREVIEW"
				android:textColor="#c0ffffff"
				android:textSize="14sp"
				binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Basic.otf')" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/button_layout3"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_marginTop="10dp"
			android:gravity="top|center_horizontal"
			android:layout_marginLeft="10dp"
			android:orientation="vertical">
			<ImageButton
				android:id="@+id/image_extra2"
				android:layout_width="40dp"
				android:layout_height="40dp"
				android:layout_marginTop="5dp"
				android:layout_marginBottom="5dp"
				android:layout_gravity="center"
				android:scaleType="fitCenter"
				android:padding="0dp"
				android:layout_margin="5dp"
				android:nextFocusLeft="@+id/image_extra1"
				android:nextFocusRight="@+id/image_extra2"
				android:background="@android:color/transparent"
				android:src="@drawable/ic_details_subs" />
			<TextView
				android:id="@+id/button_layout3_text1"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="SUBSCRIBE"
				android:textColor="#c0ffffff"
				android:textSize="14sp"
				binding:text="buttonText3_1"
				binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Basic.otf')" />
			<TextView
				android:id="@+id/button_layout3_text2"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text=""
				android:textColor="#ffffffff"
				android:textSize="16sp"
				binding:text="buttonText3_2"
				binding:typeface="TYPEFACE_FROM_ASSET('fonts/Flama-Basic.otf')" />
			</LinearLayout>
	</LinearLayout>
</merge>
